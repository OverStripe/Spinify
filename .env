# 🚀 Telegram API Credentials (Required for Telethon)
API_ID=YOUR_TELEGRAM_API_ID
API_HASH=YOUR_TELEGRAM_API_HASH

# 🔑 Telethon Session (Login using session string - No phone required)
SESSION_STRING=YOUR_TELETHON_SESSION_STRING

# 🤖 Telegram Bot Token (For remote control via bot)
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# 👑 Owner Telegram ID (Only this ID can control the bot)
OWNER_ID=YOUR_TELEGRAM_USER_ID  # Example: 123456789

# ⏳ Default Interval (Time between automatic ad postings in seconds)
DEFAULT_INTERVAL=600  # Default: 10 minutes

# 📂 Data File (Stores groups, settings, and session details)
DATA_FILE=bot_data.pkl

# 🔄 FLOOD_WAIT Cooldown (Time to wait in case of Telegram rate limits)
FLOOD_WAIT_COOLDOWN=60  # Default: 60 seconds

# 📢 Default Ad Message (If not set via command)
DEFAULT_AD_MESSAGE="🚀 Boost your business with exclusive deals! Contact us now!"
